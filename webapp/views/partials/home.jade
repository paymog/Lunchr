div(class='container', ng-if='init()')
    -var selected = 'Home';
    include ./includes/banner.jade
    h1 {{name}}

    div(class='container no-margin-left margin-top-big')
        div(class="row")
            div(class="col-xs-6")
                ui-view(class='float-right')
                //this should actually be "div(ui-view)" but for some reason that doesn't work...
                //See http://goo.gl/TVBKXO
            div(class="col-xs-6")
                div(class='container')
                    button(type='submit', class='btn btn-default btn-primary float-left', ng-click='startMatch()') Let's go eat&nbsp;&nbsp;>
                div(class='container margin-top-very-small')
                    button(type='submit', class='btn btn-default btn-primary float-left', ng-click='finishEating()') I'm Finished Eating!

div(class='container', ng-if='init() == false')
    include ./includes/invalid.jade