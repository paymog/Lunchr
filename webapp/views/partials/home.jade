div(class='container', ng-if='init()')
    include ./includes/banner.jade
    h1 {{name}}

    div(class='div-center-circleBtn')
        button(type='button', class='btn-circle', ng-click='match()') Find a Match

    div(class='container no-margin-left margin-top-big')
        div(class="row")
            div(class="col-xs-6")
                ui-view(class='float-right')
                //this should actually be "div(ui-view)" but for some reason that doesn't work...
                //See http://goo.gl/TVBKXO
            div(class="col-xs-6")
                button(type='submit', class='btn btn-default btn-primary float-left') Let's go eat&nbsp;&nbsp;>

div(class='container', ng-if='init() == false')
    include ./includes/invalid.jade